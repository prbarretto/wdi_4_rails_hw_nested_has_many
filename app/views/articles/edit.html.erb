<h2>Edit Article</h2>

<%= form_for @articles do |form| %>
  <%= form.label :title, 'Enter title' %>
  <p><%= form.text_field :title, placeholder: 'Enter title' %></p>
  <%= form.label :body, 'Enter article' %>
  <p><%= form.text_area :comment, rows: 10, cols: 80, placeholder: 'Enter your article here.' %></p>
  <p><%= form.submit %><p>
<% end %>
